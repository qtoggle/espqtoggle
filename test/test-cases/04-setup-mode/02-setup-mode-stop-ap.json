{
    "name": "setup-mode-stop-ap",
    "instructions": [
        {
            "name": "device-write-gpio",
            "params": {
                "gpio": 12,
                "value": 0
            }
        },
        {
            "name": "sleep",
            "params": {
                "duration": 7500
            }
        },
        {
            "name": "device-write-gpio",
            "params": {
                "gpio": 12,
                "value": 1
            }
        },
        {
            "name": "wifi-ap-start",
            "params": {
                "ssid": "${TEST_SSID}",
                "psk": "${TEST_PSK}",
                "wait_device_connect": true,
                "timeout": 30
            }
        }
    ]
}
