{
    "name": "already-provisioned",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio4",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN_EMPTY}"
                },
                "body": {
                    "display_name": "Already Provisioned"
                },
                "expected_status": 204,
                "expected_body": null
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "DELETE",
                "path": "/ports/virtual1",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN_EMPTY}"
                },
                "expected_status": 204,
                "expected_body": null
            }
        },

        {
            "name": "json-http-client",
            "params": {
                "method": "POST",
                "path": "/reset",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN_EMPTY}"
                },
                "expected_status": 204,
                "expected_body": null
            }
        },
        {
            "name": "wifi-ap-wait-device-disconnect"
        },
        {
            "name": "wifi-ap-wait-device-connect"
        },
        {
            "name": "sleep",
            "params": {
                "duration": 5000
            }
        },

        {
            "name": "json-http-client",
            "params": {
                "method": "GET",
                "path": "/ports",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN_EMPTY}"
                },
                "expected_status": 200,
                "expected_body": [
                    {
                        "id": "gpio4",
                        "display_name": "Already Provisioned",
                        "writable": false,
                        "enabled": true,
                        "persisted": false,
                        "internal": false,
                        "sampling_interval": 10,
                        "transform_read": "NOT(${DOLLAR})",
                        "type": "boolean",
                        "output": false,
                        "pull_up": true,
                        "value": false,
                        "definitions": {
                            "output": {
                                "display_name": "Output Mode",
                                "description": "Makes this GPIO an output pin.",
                                "modifiable": true,
                                "type": "boolean"
                            },
                            "pull_up": {
                                "display_name": "Pull-Up",
                                "description": "Enables the internal pull-up.",
                                "modifiable": true,
                                "type": "boolean"
                            },
                            "sampling_interval": {
                                "display_name": "Sampling Interval",
                                "description": "Indicates how often to read the port value.",
                                "unit": "milliseconds",
                                "modifiable": true,
                                "type": "number",
                                "min": 0,
                                "max": 86400000,
                                "integer": true
                            }
                        }
                    }
                ]
            }
        }
    ]
}
