{
    "name": "set-port-value-invalid-value",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "POST",
                "path": "/ports",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "id": "bool_port",
                    "type": "boolean"
                },
                "expected_status": 201
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "POST",
                "path": "/ports",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "id": "num_port",
                    "type": "number",
                    "min": -10,
                    "max": 10,
                    "integer": true,
                    "step": 2
                },
                "expected_status": 201
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/bool_port/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": 10,
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-value"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": true,
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-value"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": -12,
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-value"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": 12,
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-value"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": 1,
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-value"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "DELETE",
                "path": "/ports/bool_port",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "expected_status": 204
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "DELETE",
                "path": "/ports/num_port",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "expected_status": 204
            }
        }
    ]
}

