                "method": "PATCH",
                "path": "/ports/num_port",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "expression": "IF(${DOLLAR}bool_port, NOT(${DOLLAR}), ${DOLLAR})"
                },
                "expected_status": 204
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port/value",
