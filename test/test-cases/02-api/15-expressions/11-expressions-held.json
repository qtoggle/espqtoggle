{
    "name": "expressions-held",
    "instructions": [
		{
			"name": "json-http-client",
			"params": {
				"method": "PATCH",
				"path": "/ports/num_port",
				"headers": {
					"Authorization": "Bearer ${TEST_JWT_ADMIN}"
				},
				"body": {
				    "expression": "123"
				},
				"expected_status": 204
			}
		},
		{
			"name": "json-http-client",
			"params": {
				"method": "PATCH",
				"path": "/ports/bool_port",
				"headers": {
					"Authorization": "Bearer ${TEST_JWT_ADMIN}"
				},
				"body": {
				    "expression": "HELD(${DOLLAR}num_port, 123, 2000)"
				},
				"expected_status": 204
			}
		},
		{
			"name": "json-http-client",
			"params": {
				"method": "GET",
				"path": "/ports/bool_port/value",
				"headers": {
					"Authorization": "Bearer ${TEST_JWT_ADMIN}"
				},
				"expected_status": 200,
				"expected_body": false
			}
		},
		{
		    "name": "sleep",
		    "params": {
		        "duration": 2500
		    }
		},
		{
			"name": "json-http-client",
			"params": {
				"method": "GET",
				"path": "/ports/bool_port/value",
				"headers": {
					"Authorization": "Bearer ${TEST_JWT_ADMIN}"
				},
				"expected_status": 200,
				"expected_body": true
			}
		}
    ]
}

