{
    "name": "expressions-constants-literal-number",
    "instructions": [
		{
			"name": "json-http-client",
			"params": {
				"method": "POST",
				"path": "/ports",
				"headers": {
					"Authorization": "Bearer ${TEST_JWT_ADMIN}"
				},
				"body": {
				    "id": "num_port",
				    "type": "number"
				},
				"expected_status": 201
			}
		},
		{
			"name": "json-http-client",
			"params": {
				"method": "PATCH",
				"path": "/ports/num_port",
				"headers": {
					"Authorization": "Bearer ${TEST_JWT_ADMIN}"
				},
				"body": {
				    "expression": "-16.5"
				},
				"expected_status": 204
			}
		},
		{
			"name": "json-http-client",
			"params": {
				"method": "GET",
				"path": "/ports/num_port/value",
				"headers": {
					"Authorization": "Bearer ${TEST_JWT_ADMIN}"
				},
				"expected_status": 200,
				"expected_body": -16.5
			}
		}		
    ]
}

