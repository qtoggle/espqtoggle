{
    "name": "set-device-attributes",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/device",
                "body": {
                    "name": "testdevice",
                    "display_name": "Test Display Name",
                    "admin_password": "${TEST_PASSWORD}",
                    "normal_password": "${TEST_PASSWORD}",
                    "viewonly_password": "${TEST_PASSWORD}",
                    "ip_address": "${TEST_NETWORK_DEVICE_IP}",
                    "ip_netmask": ${TEST_NETWORK_MASK},
                    "ip_gateway": "${TEST_NETWORK_HOST_IP}",
                    "ip_dns": "${TEST_NETWORK_HOST_IP}"
                },
                "expected_status": 204,
                "expected_body": null
            }
        },
        {
            "name": "wifi-ap-start",
            "params": {
                "ssid": "${TEST_SSID}",
                "psk": "${TEST_PSK}",
                "host_ip_address": "${TEST_NETWORK_HOST_IP}/16",
                "device_ip_address": "${TEST_NETWORK_DEVICE_IP}",
                "start_ip_address": "${TEST_NETWORK_START_IP}",
                "stop_ip_address": "${TEST_NETWORK_STOP_IP}",
                "wait_device_connect": true
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "GET",
                "path": "/device",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "expected_status": 200,
                "expected_body_schema": {
                    "type": "object",
                    "additionalProperties": true,
                    "required": [
                        "name",
                        "display_name",
                        "admin_password",
                        "normal_password",
                        "viewonly_password",
                        "ip_address",
                        "ip_netmask",
                        "ip_gateway",
                        "ip_dns",
                        "ip_address_current",
                        "ip_netmask_current",
                        "ip_gateway_current",
                        "ip_dns_current"
                    ],
                    "properties": {
                        "name": {
                            "enum": ["testdevice"]
                        },
                        "display_name": {
                            "enum": ["Test Display Name"]
                        },
                        "admin_password": {
                            "enum": [""]
                        },
                        "normal_password": {
                            "enum": [""]
                        },
                        "viewonly_password": {
                            "enum": [""]
                        },
                        "ip_address": {
                            "enum": ["${TEST_NETWORK_DEVICE_IP}"]
                        },
                        "ip_netmask": {
                            "enum": [${TEST_NETWORK_MASK}]
                        },
                        "ip_gateway": {
                            "enum": ["${TEST_NETWORK_HOST_IP}"]
                        },
                        "ip_dns": {
                            "enum": ["${TEST_NETWORK_HOST_IP}"]
                        },
                        "ip_address_current": {
                            "enum": ["${TEST_NETWORK_DEVICE_IP}"]
                        },
                        "ip_netmask_current": {
                            "enum": [${TEST_NETWORK_MASK}]
                        },
                        "ip_gateway_current": {
                            "enum": ["${TEST_NETWORK_HOST_IP}"]
                        },
                        "ip_dns_current": {
                            "enum": ["${TEST_NETWORK_HOST_IP}"]
                        }
                    }
                }
            }
        }
    ]
}

