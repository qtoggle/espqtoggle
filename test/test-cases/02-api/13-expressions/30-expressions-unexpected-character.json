{
    "name": "expressions-unexpected-character",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "expression": "  some random text"
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid field: expression",
                    "details": {
                        "reason": "unexpected-character",
                        "pos": 3
                    }
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "expression": "  SUM(10, invalid)"
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid field: expression",
                    "details": {
                        "reason": "unexpected-character",
                        "pos": 11
                    }
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
