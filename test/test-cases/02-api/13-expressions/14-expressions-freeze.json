{
    "name": "expressions-freeze",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "expression": ""
                },
                "expected_status": 204
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": 100,
                "expected_status": 204
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port2",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "expression": "FREEZE(${DOLLAR}num_port, 2000)"
                },
                "expected_status": 204
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/num_port/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": 200,
                "expected_status": 204
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "GET",
                "path": "/ports/num_port2/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "expected_status": 200,
                "expected_body": 100
            }
        },
        {
            "name": "sleep",
            "params": {
                "duration": 2000
            }
        },        
        {
            "name": "json-http-client",
            "params": {
                "method": "GET",
                "path": "/ports/num_port2/value",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "expected_status": 200,
                "expected_body": 200
            }
        }
    ]
}
