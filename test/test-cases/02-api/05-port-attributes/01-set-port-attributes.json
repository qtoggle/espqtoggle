{
    "name": "set-port-attributes",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "display_name": "test display name",
                    "enabled": true,
                    "persisted": true,
                    "sampling_interval": 10,
                    "transform_read": "NOT(${DOLLAR}gpio0)",
                    "pull_up": true,
                    "output": true
                },
                "expected_status": 204,
                "expected_body": null
