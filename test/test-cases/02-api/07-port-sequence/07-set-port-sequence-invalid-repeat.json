{
    "name": "set-port-sequence-invalid-repeat",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0/sequence",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "values": [false, true],
                    "delays": [100, 100],
                    "repeat": -1
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-field",
                    "field": "repeat"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0/sequence",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "values": [false, true],
                    "delays": [100, 100],
                    "repeat": 655360
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-field",
                    "field": "repeat"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0/sequence",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "values": [false, true],
                    "delays": [100, 100],
                    "repeat": "1"
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-field",
                    "field": "repeat"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0/sequence",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "values": [false, true],
                    "delays": [100, 100],
                    "repeat": ["false", "true"]
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-field",
                    "field": "repeat"
                }
            }
        }
    ]
}

