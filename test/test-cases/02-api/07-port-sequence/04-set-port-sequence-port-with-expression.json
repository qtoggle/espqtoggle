{
    "name": "set-port-sequence-port-with-expression",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "expression": "false"
                },
                "expected_status": 204
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0/sequence",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "values": [false, true],
                    "delays": [100, 100],
                    "repeat": 1
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "port with expression"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "expression": ""
                },
                "expected_status": 204
            }
        }
    ]
}

