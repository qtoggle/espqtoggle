{
    "name": "webhooks-port-remove",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "POST",
                "path": "/ports",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "id": "test_port",
                    "type": "number",
                    "min": 0,
                    "max": 100,
                    "integer": true,
                    "step": 5
                },
                "expected_status": 201
            }
        },
        {
            "name": "json-http-client",
			"fire_and_forget": true,
			"fire_delay": 1000,
            "params": {
                "method": "DELETE",
                "path": "/ports/test_port",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "expected_status": 204
            }
        },
        {
            "name": "json-http-server",
            "params": {
                "port": 8080,
                "expected_method": "POST",
                "expected_path": "/webhooks",
                "expected_headers": {
                    "Authorization": "Bearer ${TEST_JWT_WEBHOOKS}"
                },
                "expected_body": {
                    "type": "port-remove",
                    "params": {
                        "id": "test_port"
                    }
                }
            }
        }
    ]
}

