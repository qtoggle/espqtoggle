{
    "name": "set-webhooks-invalid-events",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/webhooks",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "enabled": true,
                    "scheme": "http",
                    "host": "{{HOST_IP_ADDRESS}}",
                    "port": 8080,
                    "path": "/webhooks",
                    "password": "${TEST_PASSWORD}_webhooks",
                    "events": [
                        "value-change",
                        "port-update",
                        "port-add",
                        "port-remove",
                        "device-update",
                        "full-update"
                    ],
                    "timeout": 2,
                    "retries": 0
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-field",
                    "field": "events"
                }
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/webhooks",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
                },
                "body": {
                    "enabled": true,
                    "scheme": "http",
                    "host": "{{HOST_IP_ADDRESS}}",
                    "port": 8080,
                    "path": "/webhooks",
                    "password": "${TEST_PASSWORD}_webhooks",
                    "events": {"invalid": true},
                    "timeout": 2,
                    "retries": 0
                },
                "expected_status": 400,
                "expected_body": {
                    "error": "invalid-field",
                    "field": "events"
                }
            }
        }
    ]
}

