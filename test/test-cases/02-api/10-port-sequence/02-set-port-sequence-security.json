{
    "name": "set-port-sequence-security",
    "instructions": [
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0/sequence",
                "headers": {
                    "Authorization": "Bearer inexistent"
                },
                "body": {
                    "values": [true, false],
                    "delays": [10, 10],
                    "repeat": 2
                },
                "expected_status": 401
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0/sequence",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_VIEWONLY}"
                },
                "body": {
                    "values": [true, false],
                    "delays": [10, 10],
                    "repeat": 2
                },
                "expected_status": 403
            }
        },
        {
            "name": "json-http-client",
            "params": {
                "method": "PATCH",
                "path": "/ports/gpio0/sequence",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_NORMAL}"
                },
                "body": {
                    "values": [true, false],
                    "delays": [10, 10],
                    "repeat": 2
                },
                "expected_status": 204
            }
        }
    ]
}

