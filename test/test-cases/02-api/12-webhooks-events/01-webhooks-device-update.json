{
    "name": "webhooks-device-update",
    "instructions": [
        {
            "name": "json-http-client",
            "fire_and_forget": true,
            "fire_delay": 1000,
            "params": {
                "method": "PATCH",
                "path": "/device",
                "headers": {
                    "Authorization": "Bearer ${TEST_JWT_ADMIN}"
